<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Inicio">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primaryBackgroundColor"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primaryLight"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="center">

                    <TextView
                        android:id="@+id/hiUser"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="¡Hola Andrés!"
                        android:textSize="28dp" />

                    <RatingBar
                        android:id="@+id/ratingUser"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:numStars="5"
                        android:rating="4"
                        android:scaleX="0.5"
                        android:scaleY="0.5"
                        android:theme="@style/RatingBar" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="center">

                    <TextView
                        android:id="@+id/travel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Viajes:  N/A"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/timeTravel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tiempo:  N/A"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/distanceUser"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Distancia:  N/A"
                        android:textSize="20dp" />


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¡Hay solicitudes cercanas!"
                    android:textSize="25dp" />

                <Button
                    android:id="@+id/verificar"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@color/primaryColor"
                    android:text="Ver más"
                    android:textColor="@android:color/background_light" />

            </LinearLayout>


            <androidx.cardview.widget.CardView
                android:id="@+id/card_view"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardCornerRadius="5dp"
                android:layout_margin="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/image"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_margin="5dp"
                            android:src="@drawable/shipment" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/distance"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="A N/A km"
                                android:textSize="18dp"/>
                            <TextView
                                android:id="@+id/idSolicutud"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Número de Solicitud: N/A"
                                android:textSize="18dp"/>
                            <TextView
                                android:id="@+id/dateSolicitud"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Fecha de solicitud: 01-01-2020 00:00"
                                android:textSize="18dp"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:paddingBottom="5dp"
                        >

                        <Button
                            android:id="@+id/cancelarSolicitud"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:background="@color/primaryColor"
                            android:text="Cancelar"
                            android:textColor="@android:color/background_light" />

                        <Button
                            android:id="@+id/iniciarSolicitud"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:background="@color/primaryColor"
                            android:text="Verificar"
                            android:textColor="@android:color/background_light" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>